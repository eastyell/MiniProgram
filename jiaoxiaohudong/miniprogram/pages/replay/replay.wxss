
.content {
  height: 100%;
  width: 100%;
}


.text-content {
  padding: 0 25rpx;
}

textarea {
  width: 700rpx;
  height: 300rpx;
  padding: 25rpx 0;
}


.input-content{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 300px;
  line-height: 36px;
  border-radius: 5px;
  background-color: #eff2f3f3;
  padding: 5px;
  margin-bottom: 20px;
  margin-top: 20px;
}

.btn-func {
  /* display: flex; */
  flex-direction: column;
  width: 100%;
  /* position: absolute; */
  bottom: 0;
  /* margin: 0 auto; */
  align-items: center;
}

.btn {
  width: 250px;
  height: 45px;
  line-height: 45px;
  background-color: #d50310;
  color: #fff;
  border-radius: 50px;
  margin-bottom: 80px;
  margin-top: 30px;
}

.contentNumStyle {
  display: flex;
  justify-content: flex-end;
  padding: 2%;
  font-size: 14px;
  color: #c0c6d3;
}

.record { 
  width: 100rpx;
  height: 100rpx;
  margin-top: 0px;
  margin-left: 80rpx;
  border-radius: 50px;
}
.image-group{
  display: inline-block;
  flex-direction: row;
  width: 700rpx;
  height: 450rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
}

.image-group image{
  width: 100px;
  height: 100px;
  margin-left: 10px;
  margin-top: 10px;
  background-color: #999;
}

.image-group icon{
  display: inline-block;
  vertical-align: top;
  position: absolute
}

.icon{
  display: inline-block;
  vertical-align: top;
  position: absolute
}

.logo { 
  width: 150rpx;
  height: 150rpx;
  margin-top: 10px;
  margin-left: 30rpx;
}