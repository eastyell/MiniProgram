/* pages/bbsDetail/bbsDetail.wxss */
.page{
  height: 100%;
}
.container {
  display: flex;
  flex-direction: column;
  height: 100%;

}

.container-content {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 16px 16px;
  margin: 0 auto;
}

.user-info {
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
}

.user-head {
  width: 36px;
  height: 36px;
  line-height: 36px;
  border-radius: 50%;
  background-color: #ccc;
}

.user-name-time {
  display: flex;
  flex-direction: column;
  width: 80%;
  margin-top: 5px;
  margin-left: 10px;
}

.user-name {
  font-size: 18px;
  color: #333;
  font-weight: bold;
}

.user-publish-time {
  font-size: 15px;
  color: #999;
}

.content {
  display: flex;
  flex-direction: column;
  margin-right: 10%;
  margin-top: 14px;
}

.content-scroll {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.content-text {
  font-size: 18px;
  color: #666;
  margin-left: 10px;
}

.content-img {
  width: 100%;
  min-height: 100px;
  margin-left: 10px;
  margin-top: 10px;
  background-color: #999;
}

.line {
  width: 100%;
  height: 1px;
  margin-top: 20px;
  background-color: #ccc;
  font-size: 16px;
  text-align: center;
  vertical-align: middle;
  position: relative;
  margin: 0 auto;
  z-index: -99;
}

.like-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20px;
  margin-bottom: 40px;
  position: fixed;
  bottom: 0;
}

.replay-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 10px;
  margin-right: 10px;
  position: fixed;
  right: 0;
}

.ico-img {
  width: 30px;
  height: 30px;
  margin-left: 0px;
  margin-top: 0px;  
}

.like-icon {
  width: 48px;
  height: 48px;
}

.like-text {
  font-size: 16px;
  color: rgb(17, 14, 16);
  font-weight: bold;
}

.replay_content{
  display: flex;
  flex-direction: column;
  height: 100%;
}

.tip-text{
  display: flex;
  flex-direction: row;
  margin:10rpx; 
}
.title_area{
  display: flex;
  flex-direction: row;
  align-items: center;

}
.text_area {
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.publish_time{
  font-size: 8pt;
  color: gray;
  margin-top: 1rpx;
}
.all_comment{
  padding-bottom: 10rpx;
  padding-top: 10rpx;
  width: 750rpx;
}
.all_comment_text{
  font-size: 12pt;
  color: gray;
}
.avatar{
  width: 80rpx;
  height: 80rpx;
}
.comment_item{
  padding-top: 10rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.comment_item_head{
  display: flex;
  flex-direction: row;
}
.author_name{
  font-size: 14pt;
}
.comment_author_name{
  font-size: 12pt;
}

.all_comment_list{
  margin-bottom: 102rpx;
}

.comment_content{
  font-size: 12pt;
  margin-left: 102rpx;
}
.content{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.text{
  margin-bottom: 20rpx;
}
.image_area{
  display: flex;
  flex-direction: column;
  justify-content: center; 
  align-items: center;
}

.input-box{
  margin-top: 34rpx;
  display: flex;
  align-items: flex-end; /*底部对齐*/
  justify-content: space-between; /*两端对齐*/
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 18rpx 0 18rpx 30rpx;
  background-color: #F7F8F7;
  font-size: 28rpx;
  z-index: 999;
}
.divLine{
 background: #EEEDEE;
 width: 100%;
 height: 10rpx;
}

.input-box .textarea {
width: 604rpx;
min-height: 34rpx;
max-height: 102rpx; /*最多显示三行*/
border-width: 15rpx 20rpx; /*使用padding与预期留白不一致，故使用border*/
border-style: solid;
border-color: #ffffff;
line-height: 34rpx;
font-size: 28rpx;
background-color: #ffffff;
border-radius: 4rpx;
}

.send {
 width: 116rpx;
height: 64rpx;
line-height: 64rpx;
text-align: center;
color: #66CC00;
}

.rowCenter {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.movable-area {
  width: 100%;
  height: 34rpx;
  position: absolute;
  bottom: -10rpx;
  left: 0;

}

.movable-view {
  width: 120rpx;
  height: 34rpx;
  background: #23459c;
  box-shadow: 0px 10rpx 30rpx 0px rgba(0, 0, 0, 0.1);
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.voice {
  margin-top: 66rpx;
  height: 100rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 5px 15px 0px rgba(0, 0, 0, 0.05);
  border-radius: 5px;
}

.voice view {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
  color: #4a4a4a;
  align-items: center;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.voice view image {
  width: 35rpx;
  height: 35rpx;
  margin-right: 20rpx;
}

.voice progress {
  width: 100%;
}